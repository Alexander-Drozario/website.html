<script>
// Simple JS for nav toggle, smooth scroll, and form validation
const $=s=>document.querySelector(s),$$=s=>Array.from(document.querySelectorAll(s));
$('#year').textContent=new Date().getFullYear();

// Mobile nav
const navToggle=$('#nav-toggle'),primaryNav=$('#primary-nav');
navToggle.addEventListener('click',()=>{const ex=navToggle.getAttribute('aria-expanded')==='true';navToggle.setAttribute('aria-expanded',!ex);primaryNav.style.display=ex?'':'block'});

// Smooth scroll
$$('.nav-link').forEach(link=>{
  link.addEventListener('click',e=>{
    const href=link.getAttribute('href');if(!href.startsWith('#'))return;e.preventDefault();
    const target=document.querySelector(href);if(!target)return;
    target.scrollIntoView({behavior:'smooth'});setTimeout(()=>{target.setAttribute('tabindex','-1');target.focus();setTimeout(()=>target.removeAttribute('tabindex'),400)},300);
    if(navToggle.getAttribute('aria-expanded')==='true') navToggle.click();
  });
});

// Form validation
const form=$('#contact-form'),resp=$('#form-response');
function err(el
